// Copied from https://tsx.is/typescript#recommendation and modified
{
	"compilerOptions": {
    // Fixes type error: metadata not defined on SymbolConstructor (i.e. Symbol.metadata)
    // https://www.typescriptlang.org/docs/handbook/release-notes/typescript-5-2.html#decorator-metadata
    "target": "es2022",
    "lib": ["es2022", "esnext.decorators", "dom"]

		// Treat files as modules even if it doesn't use import/export
		"moduleDetection": "force",

		// Ignore module structure
		"module": "Preserve",

		// Allow JSON modules to be imported
		"resolveJsonModule": true,

		// Allow JS files to be imported from TS and vice versa
		"allowJs": true,

		// Use correct ESM import behavior
		"esModuleInterop": true,

		// Disallow features that require cross-file awareness
		"isolatedModules": true
	}
}
