{
  "name": "escpos-ts",
  "version": "0.0.1",
  "description": "ESC/POS commands with Typescript type definitions",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "npx eslint --cache --fix src reporters",
    "build": "tsc",
    "test": "tsx --test",
    "table": "tsx --test --test-reporter=./reporters/html.ts src/index.test.ts",
    "support": "npm run table 2>/dev/null | awk '/<html>/,EOF' > docs/support.html",
    "prepare": "husky install"
  },
  "author": "",
  "license": "BSD-3-Clause",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.9.1",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4"
  },
  "dependencies": {
    "@tsmetadata/polyfill": "^1.1.3",
    "buffer": "^6.0.3",
    "tsx": "^4.20.6"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "quoteProps": "consistent"
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix src reporters",
    "*.{ts,md}": "prettier --write"
  }
}
